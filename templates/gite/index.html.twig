{% extends 'base.html.twig' %}

{% block title %}Gîte Progica{% endblock %}

{% block body %}
<section class="row title"><h1>Nos gîtes les plus récents</h1></section>
<section class="row">
    {% for gite in gites %}
    <div class="card" style="width: 18rem;">
      {% if gite.filename %}
        <img src="{{ vich_uploader_asset(gite,'imageFile') }}" class="card-img-top" alt="...">
        {% endif %}  
        <div class="card-body">
          
          <h5 class="card-title">{{ form_row(formGite.name)}}</h5>
          <p class="card-text">{{ gite.address }}</p>
          <p class="card-text">{{ gite.priceHightSeason }}</p>
          <p class="card-text">{{ gite.priceLowSeason }}</p>
          <a href="{{ path('gite.show',{'id': gite.id}) }}" class="btn btn-primary">Go somewhere</a>
        </div>
      </div>
    {% endfor %}
</section>

{% endblock %}
